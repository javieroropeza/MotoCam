<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.motocam.MainActivity" >

    <Button
        android:id="@+id/btnres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="102dp"
        android:text="Resolucion" />

    <TextView
        android:id="@+id/text_camaraf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/camara_trasera"
        android:layout_alignRight="@+id/cama_frontal"
        android:layout_marginRight="23dp"
        android:text="Frontal"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageButton
        android:id="@+id/cama_frontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/camara_trasera"
        android:layout_marginRight="60dp"
        android:src="@drawable/ic_launcher" />

    <ImageButton
        android:id="@+id/camara_trasera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text_camt"
        android:layout_marginBottom="33dp"
        android:layout_toLeftOf="@+id/btnres"
        android:src="@android:drawable/btn_star" />

    <TextView
        android:id="@+id/text_camt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnres"
        android:layout_marginBottom="71dp"
        android:layout_toLeftOf="@+id/btnres"
        android:text="Trasera"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>